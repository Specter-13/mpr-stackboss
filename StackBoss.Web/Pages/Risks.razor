@page "/Risks"
@inject RiskService riskService

<NavLink class="nav-link" href="AddRisk">
    <span class="oi oi-plus" aria-hidden="true">Add New</span>

</NavLink>

<h1>Employee Info</h1>
@if (RiskObj is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <table class="table">
            <thead>
                <tr>
                    <th>Risk Id</th>
                    <th>Risk Name</th>
                    <th>Category</th>
                </tr>
            </thead>
        <tbody>
            @foreach(var rsk in RiskObj)
                {
            <tr>
                <td>@rsk.Id</td>
                <td>@rsk.RiskName</td>
                <td>@rsk.RiskCategory</td>
             
                <td>
                    <a class="nav-link" href="EditRisk/@rsk.Id">
                        <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                    </a>
                    <a class="nav-link" href="Delete/@rsk.Id">
                        <span class="oi oi-trash" aria-hidden="true">Delete</span>
                    </a>
                </td>
            </tr>
                }
        </tbody>
    </table>
}


@code {
    List<RiskEntity> RiskObj;
    protected override async Task OnInitializedAsync()
    {
        RiskObj = await Task.Run(() => riskService.GetAllRisksAsync());
    }
}