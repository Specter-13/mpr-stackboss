@page "/EditRisk/{Id}"
@inject RiskService riskService
@inject NavigationManager NavigationManager

<h2>Edit Risk</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <input form="Name" class="form-control" @bind="@obj.Id" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input form="Name" class="form-control" @bind="@obj.RiskName" />
            </div>
            <div class="form-group">
                <label for="Gender" class="control-label"></label>
                <select @bind="@obj.RiskCategory" class="form-control">
                    <option value="">-Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateRisk" value="Update" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string Id { get; set; }
    RiskEntity obj = new RiskEntity();
    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => riskService.GetRiskAsync(Convert.ToInt32(Id)));
    }
    protected async void UpdateRisk()
    {
        await riskService.UpdateRiskAsync(obj);
        NavigationManager.NavigateTo("Risks");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Risks");
    }
}